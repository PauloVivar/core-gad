<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="SubdivisionCertificate" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="requestId" class="java.lang.Long"/>
    <parameter name="citizenName" class="java.lang.String"/>
    <parameter name="cadastralCode" class="java.lang.String"/>
    <parameter name="subdivisionType" class="java.lang.String"/>
    <parameter name="issueDate" class="java.lang.String"/>
    <parameter name="city" class="java.lang.String"/>
    <parameter name="province" class="java.lang.String"/>
    <parameter name="address" class="java.lang.String"/>

    <title>
        <band height="79" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[GOBIERNO AUTÓNOMO DECENTRALIZADO]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="20" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[MUNICIPAL DE AZOGUES]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="40" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[DIRECCIÓN DE CONTROL URBANO]]></text>
            </staticText>
        </band>
    </title>
    
    <detail>
        <band height="500" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="20" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[ARQUITECTO LUIS LUZURIAGA TORRES, DIRECTOR DE CONTROL URBANO DEL GOBIERNO AUTONOMO DESENTRALIZADO MUNICIPAL DE AZOGUES, A PETICION DE PARTE INTERESADA]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="60" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <text><![CDATA[CERTIFICA:]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="100" width="555" height="60"/>
                <textElement textAlignment="Justified">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Que, el terreno de propiedad de los señor/a " + $P{citizenName} + 
                    ", con clave catastral " + $P{cadastralCode} + 
                    ", ubicado en " + $P{address} + 
                    " de la ciudad de " + $P{city} + 
                    ", provincia de " + $P{province} + 
                    ", " + $P{subdivisionType} + 
                    ", con fecha " + $P{issueDate} + "."]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="0" y="170" width="555" height="40"/>
                <textElement textAlignment="Justified">
                    <font size="12"/>
                </textElement>
                <text><![CDATA[Es todo cuanto puedo certificar en honor a la verdad, autorizando al peticionario hacer del presente el uso que sea necesario.]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="420" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Azogues, " + $P{issueDate}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>